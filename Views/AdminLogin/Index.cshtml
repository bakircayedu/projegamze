
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/webadmin/https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/webadmin/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/webadmin/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/webadmin/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/webadmin/css/style.css">

    <title>Personel Giriş</title>
</head>
<body>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/webadmin/images/undraw_remotely_2j6y.svg" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h3>Personel Giriş</h3>
                                <p class="mb-4">Gençlerini kitapla beslemeyen milletlerin sonu acıdır.</p>
                            </div>
                            @using (Html.BeginForm("AdminLogin", "Adminlogin", FormMethod.Post))
                            {
                                <form action="#" method="post">

                                    <div class="form-group first">
                                        <label for="username">E-Posta</label>
                                        <input type="text" name="PERSONEL_EPOSTA"class="form-control" id="username">

                                    </div>
                                    <div class="form-group last mb-4">
                                        <label for="password">Şifre</label>
                                        <input type="password" name="PERSONEL_SİFRE"class="form-control" id="password">
                                    </div>
                                    <input type="submit" value="Giriş" class="btn btn-block btn-primary">                                   
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/webadmin/js/jquery-3.3.1.min.js"></script>
    <script src="~/webadmin/js/popper.min.js"></script>
    <script src="~/webadmin/js/bootstrap.min.js"></script>
    <script src="~/webadmin/js/main.js"></script>
</body>
</html>