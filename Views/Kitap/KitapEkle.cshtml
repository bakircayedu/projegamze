@model MvcKütüphane.Models.Entity.KITAPLAR
@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Kitabın Adı</label>
        @Html.TextBoxFor(k => k.KITAP_ADI, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitabın Yazarı</label>
        @Html.DropDownListFor(k => k.YAZARLAR.YAZAR_ID, (List<SelectListItem>)ViewBag.dgr2,
       new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitabın Kategorisi</label>
        @Html.DropDownListFor(k => k.KATEGORI1.KATEGORI_ID, (List<SelectListItem>)ViewBag.dgr1,
       new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitabın Sayfa Sayısı</label>
        @Html.TextBoxFor(k => k.S_SAYISI, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitabın Yayınevi</label>
        @Html.TextBoxFor(k => k.YAYINEVI, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Kitap Ekle</button>
    </div>
    <input type="hidden" name="Durum" value="True" />
</form>