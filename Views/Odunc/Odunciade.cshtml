@model MvcKütüphane.Models.Entity.EMANET

@{
    ViewBag.Title = "Odunciade";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("OduncGüncelle", "Odunc", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>İŞLEM ID</label>
        @Html.TextBoxFor(o => o.EMANET_ID, new { @class = "form-control" })
        <br />
        <label>KİTAP ADI</label>
        @Html.TextBoxFor(o => o.KITAPLAR.KITAP_ADI, new { @class = "form-control" })
        <br />
        <label>ÜYE ADI</label>
        @Html.TextBoxFor(o => o.UYELER.UYE_AD, new { @class = "form-control" })
        <br />
        <label>ÜYE SOYADI</label>
        @Html.TextBoxFor(o => o.UYELER.UYE_SOYAD, new { @class = "form-control" })
        <br />
        <label>PERSONEL</label>
        @Html.TextBoxFor(o => o.PERSONEL1.PERSONEL1, new { @class = "form-control" })
        <br />
        <label>EMANET VERİLME TARİHİ</label>
        <input type="text" class="form-control" name="EMANET_TARIHI" value="@DateTime.Now.ToShortDateString()" />
        <br />
        <label>TESLİM EDİLME TARİHİ</label>
        <input type="text" class="form-control" name="TESLIM_TARIHI" value="@DateTime.Now.AddDays(14).ToShortDateString()" />
        <br />
        <label>TESLİM EDİLEN TARİH</label>
        <input type="text" class="form-control" name="UYE_TESLIM_TARIHI" value="@DateTime.Now.ToShortDateString()" />

    </div>
    <div>
        <button class="btn btn-group" style="background-color: #8be9bb; color:#000000">İade Al</button>
    </div>
}